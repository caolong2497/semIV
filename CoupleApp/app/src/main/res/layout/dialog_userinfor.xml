<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="0dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:paddingBottom="5dp">
    <ImageButton
        android:id="@+id/dialog_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/icon_delete" />
    <FrameLayout
        android:id="@+id/dialog_frame"
        android:layout_width="330dp"
        android:layout_height="220dp"
        android:layout_below="@+id/dialog_close">

        <ImageView
            android:id="@+id/dialog_user_background"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/backgroundlove" />

        <ImageView
            android:id="@+id/dialog_user_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="5dp"
            android:background="#FFFFFF"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/avatar_girl" />
    </FrameLayout>

    <LinearLayout
        android:layout_below="@+id/dialog_frame"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Boy's name"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/dialog_updateinfor"
            android:background="@drawable/custom_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chỉnh Sửa THÔNG TIN"/>
    </LinearLayout>

</RelativeLayout>