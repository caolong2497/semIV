<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Activity.PairingActivity"
    android:padding="20dp">
    <ImageButton
        android:id="@+id/pairing_back"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:src="@drawable/icon_previous"
        android:background="@null"
        android:scaleType="fitXY"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Pairing"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="22dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:weightSum="5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Tell your partner the couple code below"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:text="Your code:"
            android:textSize="16dp" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/my_code"
            android:background="@drawable/custom_edittext"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="18dp"
            android:text="CODE"
            android:textColor="#000000"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:background="@drawable/custom_line"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:text="or"
        android:textAlignment="center"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:weightSum="4">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="Did you already get Couple code from your Partner?Please input this below."
            android:textColor="#000000"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/partner_code"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/custom_edittext2"
            android:hint="Your partner's code"
            android:padding="8dp"/>


        <ImageButton
            android:id="@+id/pariring_next"
            android:layout_marginTop="20dp"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/icon_right" />


    </LinearLayout>
    <TextView

        android:id="@+id/pairing_logout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Login with a different account"
        android:gravity="bottom|center_horizontal"
        android:textColor="#0004ff"
        />

</LinearLayout>